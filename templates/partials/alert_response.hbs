<script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.js" type="text/javascript"></script>
{{#if message}}


<script type="text/javascript">
  $(window).load(function () {
    $('#myModal').modal('show');
  });
</script>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      {{!-- <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">DriveOnRent</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div> --}}

      <div
        style="display: flex; justify-content: space-between; background-color: #007bff; color: #ffffff; padding: 15px; border-bottom: 2px solid #0056b3">
        <h5 style="margin: 0; font-size: 1.5rem;">DriveOnRent</h5>
        <button type="button"
          style="background: none; border: none; color: #ffffff; font-size: 1.25rem; cursor: pointer;"
          data-bs-dismiss="modal" aria-label="Close">&times;</button>
      </div>

      <div style="padding: 20px; line-height: 1.6;">
        <!-- Your message content here -->
        {{message}}
      </div>
      <div class="modal-footer" style="background-color: #f8f9fa; border-top: 2px solid #0056b3; ">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
          style="background-color: #007bff; color: #ffffff; border: none; padding: 8px 16px; border-radius: 5px; cursor: pointer;">Close</button>
      </div>
    </div>
  </div>
</div>

{{/if}}